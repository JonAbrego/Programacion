<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - Dark Admin</title>
    <link rel="stylesheet" type="text/css" href="~/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" type="text/css" href="~/css/local1.css" />
    <script type="text/javascript" src="~/js/jquery-1.10.2.min.js"></script>
    <script type="text/javascript" src="~/bootstrap/js/bootstrap.min.js"></script>

    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="https://code.highcharts.com/modules/exporting.js"></script>

    <link rel="stylesheet" href="~/css/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>    
</head>
<body>
    <div id="wrapper">
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">SENER</a>
            </div>
            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav side-nav">
                    <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-bullseye"></i> Encuestas</a></li>
                    <li><a href="@Url.Action("Plazos", "Home")"><i class="fa fa-tasks"></i> PlazosSLA</a></li>
                    <li class="selected"><a href="#"><i class="fa fa-globe"></i> Tiempo / Incidentes</a></li>
                    <li><a href="@Url.Action("Criticos", "Home")"><i class="fa fa-list-ol"></i> Criticos</a></li>
                    <li><a href="@Url.Action("Media", "Home")"><i class="fa fa-font"></i> Media</a></li>
                </ul>
            </div>
        </nav>
        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <div class="page-header">
                        <h1 id="navs">Indicador tiempo entre incidentes</h1>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div id="nav-tabs">
                        <form action=@Url.Action("Tiempo", "Home") method="POST">
                            <fieldset>
                                <select id="Mes" name="Mes">
                                    <option selected="selected" value="1">Enero</option>
                                    <option value="2">Febrero</option>
                                    <option value="3">Marzo</option>
                                    <option value="4">Abril</option>
                                    <option value="5">Mayo</option>
                                    <option value="6">Junio</option>
                                    <option value="7">julio</option>
                                    <option value="8">Agosto</option>
                                    <option value="9">Septiembre</option>
                                    <option value="10">Octubre</option>
                                    <option value="11">Noviembre</option>
                                    <option value="9">Diciembre</option>
                                </select>
                                @Html.TextBox("from", "", new { id = "from", type = "number", min = 2015, @Value = "2017"})
                                <input type="submit" value="Enviar" />
                            </fieldset>
                        </form>
                    </div><br />
                    @if (@TempData["datos"] != null)
                    {
                        @:<div id="container" style="min-width: 310px; height: 400px; margin: 0 auto"></div>
                    }
                </div>
            </div>
        </div>
    </div>
    <script>
        var a = @Html.Raw(Json.Encode(@TempData["datos"]))
        Highcharts.chart('container', {
            chart: {
                type: 'column'
            },
            title: {
                text: 'Indicador Tiempo Entre Incidentes'
            },
            xAxis: {
                type: 'category',
                labels: {
                    rotation: -45,
                    style: {
                        fontSize: '10px',
                        fontFamily: 'Times New Roman'
                    }
                }
            },
            yAxis: {
                title: {
                    text: 'Promedio en minutos'
                }
            },
            legend: {
                enabled: false
            },
            tooltip: {
                pointFormat: '<b>{point.y}</b>'
            },
            series: [{
                data: a,
                dataLabels: {
                    enabled: true,
                    color: '#FFFFFF',
                    align: 'center',
                    format: '{point.y}', // one decimal
                    style: {
                        fontSize: '9px',
                        fontFamily: 'Verdana, sans-serif'
                    }
                }
            }]
        });
    </script>
</body>
</html>
